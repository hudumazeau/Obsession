                        <tr><td style="color: #cccccc;font-family: Hero;font-size: large"><input type="hidden" name="on0" value="Tailles" >Tailles</td></tr><tr><td><select name="os0">
                                    <option value="XS">XS €14,00 EUR</option>
                                    <option value="S">S €14,00 EUR</option>
                                    <option value="M">M €14,00 EUR</option>
                                    <option value="L">L €14,00 EUR</option>
                                    <option value="XL">XL €14,00 EUR</option>
                                    <option value="XXL">XXL €14,00 EUR</option>
                                    <option value="XXXL">XXXL €14,00 EUR</option>
                                </select> </td></tr>
                    </table>
                    <input type="hidden" name="currency_code" value="EUR">
                    <br>
                    <input type="image" src="https://www.paypalobjects.com/fr_FR/FR/i/btn/btn_cart_LG.gif" border="0" name="submit" alt="PayPal, le réflexe sécurité pour payer en ligne">
                    <img alt="" border="0" src="https://www.paypalobjects.com/fr_FR/i/scr/pixel.gif" width="1" height="1">
                </form>
            </div>
        </div>
        <br>
    </div>
{% endblock %}
