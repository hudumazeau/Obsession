    <div class="ad" style="padding: 12px">
        <div style="display: inline-block">
            <div style="float: left;width: 50%;border-right: 1px solid #ff00d2">
                <p style="text-align: center;font-family: Hero;color: #cccccc;text-decoration: underline" >T-Shirt Obsession</p>
                <p style="text-align: center" >
                    <img src="{{ asset('bundles/obsessionmain/img/Tshirt.png') }}" width="60%"/>
                </p>
            </div>
            <div style="float: left;width: 50%;text-align: center">
                <form target="paypal" action="https://www.paypal.com/cgi-bin/webscr" method="post" style="margin-top: 65px">
                    <input type="hidden" name="cmd" value="_s-xclick">
                    <input type="hidden" name="hosted_button_id" value="V6XF9XEDR8DM8">
