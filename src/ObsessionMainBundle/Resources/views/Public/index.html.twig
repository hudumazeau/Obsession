{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            var soirees=null;
            var url="{{ path('ajax_soirees') }}";
            var pointeur=0;

            function ChangerDate(){
                $('#Date')[0].innerHTML=soirees[pointeur];
                pointeur=(pointeur+1)%soirees.length;
                setTimeout(ChangerDate,2500);
            }
            $.ajax({
                type: "POST",
                url: url,
                cache: false,
                success: function (data) {
                    soirees=data;
                    if(soirees.length==0){
                        $('#Date')[0].innerHTML='Prochainement Disponible';
                    }else{
                        ChangerDate();
                    }
                }
            });
        });
    </script>
